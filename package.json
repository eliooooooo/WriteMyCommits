{
  "name": "writemycommits",
  "displayName": "WriteMyCommits",
  "description": "Easy way to use conventional Commits",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.87.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": ["*"],
  "main": "./src/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "writemycommits",
          "name": "WriteMyCommits",
          "icon": "./src/media/icon.svg"
        }
      ]
    },
    "commands": [{
      "command": "writemycommits.helloWorld",
      "title": "Hello World"
    },
    {
      "command": "writemycommits.getCommitMessage",
      "title": "Get Commit Message"
    },
    {
      "command": "extension.showWebView",
      "title": "show WebView"
    },
    {
      "command": "extension.getUserInput",
      "title": "Get User Input"
    }]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.87.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "@vscode/test-cli": "^0.0.6",
    "@vscode/test-electron": "^2.3.9"
  }
}
