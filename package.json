{
  "name": "writemycommits",
  "displayName": "WriteMyCommits",
  "description": "Easy way to use conventional Commits",
  "version": "0.2.1",
  "publisher": "BURKLEEliott",
  "icon": "./src/media/logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/eliooooooo/WriteMyCommits"
  },
  "engines": {
    "vscode": "^1.87.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "configuration": {
        "title" : "WriteMyCommits",
        "properties": {
          "writemycommits.commitMessageFormat": {
            "type": "string",
            "default": "{type}({scope}){breakingChange}: {message}",
            "description": "Format for commit messages. Available placeholders: {type}, {scope}, {message}, {breakingChange}"
          }
        }
    },
    "viewsContainers": {
      "activitybar": [
          {
              "id": "writemycommits",
              "title": "Write My Commits",
              "icon": "./src/media/icon.svg"
          }
      ]
    },
    "views": {
      "writemycommits": [
        {
            "id": "writemycommitsView",
            "name": "Write My Commits"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "writemycommits.refresh",
          "when": "view == writemycommitsView",
          "group": "navigation"
        }
      ]
    },
    "commands": [
      {
        "command": "writemycommits.getUserInput",
        "title": "Get My Commit Name"
      },
      {
        "command": "writemycommits.getUserInputFull",
        "title": "Get My Commit Name + Description"
      },
      {
        "command": "writemycommits.getDoc",
        "title": "Get conventionnal commits doc"
      },
      {
        "command": "writemycommits.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.87.0",
    "@vscode/test-cli": "^0.0.6",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@vscode/vsce": "^2.24.0"
  }
}
